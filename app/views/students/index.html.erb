<h1>Students</h1>

<%= form_with url: students_path, method: :get, local: true do %>
  <%= text_field_tag :q, params[:q], placeholder: "Search by name or email" %>
  <%= select_tag :grade_level, options_for_select((1..12).to_a, params[:grade_level]), include_blank: "All Grades" %>
  <%= submit_tag "Search" %>
<% end %>

<ul>
  <% @students.each do |student| %>
    <li>
      <%= link_to "#{student.first_name} #{student.last_name}", student_path(student) %>
      <% if student.grade_level.present? %>
        â€” Grade <%= student.grade_level %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= paginate @students %>
