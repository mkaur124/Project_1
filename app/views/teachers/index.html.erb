<h1>Teachers</h1>

<%= form_with url: teachers_path, method: :get, local: true do %>
  <%= text_field_tag :q, params[:q], placeholder: "Search by name or subject" %>
  <%= submit_tag "Search" %>
<% end %>

<ul>
  <% @teachers.each do |teacher| %>
    <li>
      <%= link_to "#{teacher.first_name} #{teacher.last_name}", teacher_path(teacher) %>
      <% if teacher.subject.present? %>
        â€” <%= teacher.subject %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= paginate @teachers %>
